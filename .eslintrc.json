{
  "root": true,
  "extends": ["next/core-web-vitals", "next/typescript", "@feature-sliced"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "import/order": "warn",
    "import/no-internal-modules": "warn",
    "react/react-in-jsx-scope": "off",
    "boundaries/element-types": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
